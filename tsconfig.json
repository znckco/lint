{
  "compilerOptions": {
    "strict": true,

    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],

    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,

    "removeComments": false,
    "alwaysStrict": true,
    "importHelpers": false
  },
  "include": ["src"]
}
